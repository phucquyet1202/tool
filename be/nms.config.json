{
  "logType": 3,
  "rtmp": {
    "port": 1935,
    "chunk_size": 4096,
    "gop_cache": true,
    "ping": 10,
    "ping_timeout": 120
  },
  "http": {
    "port": 8000,
    "mediaroot": "./media",
    "allow_origin": "*"
  },
  "trans": {
    "ffmpeg": "D:/ffmpeg/ffmpeg-7.1.1-essentials_build/bin/ffmpeg.exe",
    "tasks": [
      {
        "app": "live",
        "hls": true,
        "hlsFlags": "[hls_time=2:hls_list_size=5:hls_flags=delete_segments]",
        "dash": false,
        "ac": "aac",
        "vc": "libx264",
        "hlsKeep": true,
        "hlsAlwaysNotify": true
      }
    ]
  }
}
